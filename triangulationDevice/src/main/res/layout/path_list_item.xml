<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp">
    <TextView
        android:id="@+id/path_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/path_name"
        android:layout_weight="2"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/path_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/path_length_zero"
        android:drawableLeft="@drawable/ic_action_headphones"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:gravity="center" />
    <TextView
        android:id="@+id/path_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_location"
        android:drawableLeft="@drawable/ic_location_on_white_24dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical" />
</LinearLayout>